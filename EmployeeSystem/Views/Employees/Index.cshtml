@model IEnumerable<EmployeeEntity>

@{
}



<h1>Index</h1>


<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-action="Index" asp-asp-controller="Site">

            <input name="searchString" class="form-control me-1 " type="search" placeholder="Search" arial-label="Search" />
            <button class="btn btn-dark" type="submit">Search by name </button>
        </form>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>


                <td>
                    <a asp-action="EditEmployee" asp-route-id="@item.Id"><i class="bi bi-pen">Edit</i></a>
                    <a asp-action="GetDeleteEmployee" asp-route-id="@item.Id"><i class="bi bi-pen">Delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<p>
    <a asp-action="AddEmployee" asp-controller="Employees" class="btn btn-primary">Create</a>
</p>